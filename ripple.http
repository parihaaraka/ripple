#   "params": {
#     "param1": "value1",
#   }
# }' | jq . > out.json

# Check node history. Look at the .result.info.complete_ledgers field. Note that there's normally multiple nodes in the pool with different histories.
POST {{URL}}
Content-Type: application/json

{
  "id":1,
  "jsonrpc":"2.0",
  "method": "server_info",
  "params": [{}]
}

### ledger
### Returns all the transactions in a ledger
POST {{URL}}
Content-Type: application/json

{
  "id": 1,
  "jsonrpc": "2.0",
  "method": "ledger",
  "params": [
    {
      "ledger_index": 98615996,
      "accounts": false,
      "transactions": true,
      "expand": true
    }
  ]
}

### account_info
### Returns all the transactions in a ledger
POST {{URL}}
Content-Type: application/json

{
  "id": 1,
  "jsonrpc": "2.0",
  "method": "account_info",
  "params": [
    {
      "ledger_index": 91485441,
      "account": "rNxp4h8apvRis6mJf9Sh8C6iRxfrDWN7AV"
    }
  ]
}
